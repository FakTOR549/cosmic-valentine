<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zodiac Wheel</title>
    <style>
        .wheel-container {
            position: absolute;
            top: 50%;
            left: 75%;
            transform: translate(-50%, -50%);
            width: 400px;
            height: 400px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .zodiac-wheel {
            position: relative;
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: radial-gradient(circle, #5a189a, #240046);
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
            transition: transform 4s ease-out;
        }
        .zodiac-sector {
            position: absolute;
            width: 50%;
            height: 50%;
            background: rgba(255, 255, 255, 0.2);
            clip-path: polygon(50% 50%, 100% 0, 100% 100%);
            transform-origin: 100% 100%;
        }
        .zodiac-sign {
            position: absolute;
            width: 40px;
            height: 40px;
            font-size: 20px;
            color: white;
            text-align: center;
            line-height: 40px;
            transform-origin: 50% 50%;
        }
        .spin-button {
            margin-top: 20px;
            padding: 10px 30px;
            background: linear-gradient(135deg, #6a1dd3, #3a0d5e);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 30px;
            font-size: 18px;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(130, 46, 150, 0.6);
            transition: all 0.3s;
        }
        .spin-button:hover {
            background: linear-gradient(135deg, #3a0d5e, #6a1dd3);
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="wheel-container">
        <div class="zodiac-wheel" id="wheel">
            <script>
                const signs = ["♈", "♉", "♊", "♋", "♌", "♍", "♎", "♏", "♐", "♑", "♒", "♓"];
                const wheel = document.getElementById("wheel");
                
                signs.forEach((sign, i) => {
                    let sector = document.createElement("div");
                    sector.className = "zodiac-sector";
                    sector.style.transform = `rotate(${i * 30}deg)`;
                    
                    let icon = document.createElement("div");
                    icon.className = "zodiac-sign";
                    icon.innerText = sign;
                    icon.style.transform = `translate(140px, -20px) rotate(${i * -30}deg)`;
                    
                    sector.appendChild(icon);
                    wheel.appendChild(sector);
                });
            </script>
        </div>
    </div>
    <button class="spin-button" onclick="spinWheel()">Spin</button>
    <script>
        function spinWheel() {
            let angle = Math.floor(Math.random() * 360) + 1440;
            document.getElementById("wheel").style.transform = `rotate(${angle}deg)`;
        }
    </script>
</body>
</html>
